  "type": "library",
  "description": "PHP client library for DataRole API",
  "keywords": ["datarole api"],
  "homepage": "https://github.com/datarole/api-client-php",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Drew Gurley",
      "email": "drew@datarole.com"
    }
  ],
  "require": {
    "php": ">=5.5",
    "guzzlehttp/guzzle": "~6.0",
    "guzzlehttp/psr7": "1.2.*",
    "psr/http-message": "1.0.*",
    "datarole/api-client-php": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.0.*",
